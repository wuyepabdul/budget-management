<div class='container'>
     <%= link_to '< Back', categories_path, class: 'btn btn-primary mb-5' %>

    <div class='transactions-container'>
            <% if @category_transactions.uniq.length > 0 %>
        <h3 class='mb-4'>Total Amount : $<%= @total_transaction_amount %> </h3>

        <% @category_transactions.uniq.each do |transaction| %>
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-8">
                    <div class="card-body d-flex justify-content-between">
                    
                        <p class="card-title"> <%= transaction.name %> </p>
                        
                        <h5 class="card-text"> $<%= transaction.amount %> </>
                    </div>
                    </div>
                </div>
            </div>
        <% end %>
    <% else %>
        <h2> Your transaction list is empty </h2>
    <% end %>

    <%= link_to 'Add a new transaction', new_category_user_transaction_path, class: 'btn btn-primary my-3' %>
    </div>
  
</div>