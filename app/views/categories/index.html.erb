<div class='center-contents'>
    <% if @categories.length > 0 %>
            <h1>Your list of Categories </h1>
        <% @categories.with_attached_icon.each do |category| %>
        <div class="card mb-5 w-75">
            <div class="row g-0 card-row h-50">
                <div class="img-div col-sm-6 col-xs-6">
                <% if category.icon.attached? %>
                    <%= image_tag category.icon, class: 'img-fluid'  %>
                <% end %>
                </div>
                <div class="col-sm-6">
                <div class="card-body d-flex flex-column justify-content-between">
                        <div class="d-flex mt-3 justify-content-between">
                            <p class="card-text"> <%= category.name %> </p>
                            <p>$ <%= category.total_amount %> </p>
                            <p class='text-end'> <%= link_to 'View', category_user_transactions_path(category.id) %> </p>
                        </div>
                       <p> <%= current_user.name %> </p>
                </div>
                </div>
            </div>
        </div>
    <% end %>
    <% else %>
        <h1 class='mb-4'> You have no categories </h1>
    <% end %>

    <%= link_to 'Add a new category', new_category_path, class: 'btn btn-primary' %>
</div>